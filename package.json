{
  "name": "firebase-extensions",
  "version": "1.0.0",
  "description": "Repository of sample Firebase Extensions.",
  "private": true,
  "scripts": {
    "format": "prettier --write \"**/*.{js,md,yml,ts,json,yaml}\"",
    "lint": "prettier --list-different \"**/*.{js,md,yml,ts,json,yaml}\"",
    "clean": "pnpm -r run clean && pnpm -r exec rm -rf node_modules",
    "local:emulator": "cd _emulator && firebase emulators:start -P demo-test",
    "test": "cd _emulator && firebase emulators:exec jest -P demo-test",
    "test:ci": "cd _emulator && firebase emulators:exec \"CI_TEST=true jest --detectOpenHandles --verbose --forceExit\" -P demo-test",
    "test:local": "concurrently \"pnpm run local:emulator\" \"jest\"",
    "test:watch": "concurrently \"pnpm run local:emulator\" \"jest --watch\"",
    "test-coverage": "jest --coverage --detectOpenHandles --forceExit",
    "generate-package-locks": "pnpm -r exec npm i --package-lock-only",
    "generate-readmes": "pnpm -r run generate-readme",
    "build": "pnpm -r --workspace-concurrency 1 --filter '!./_emulator/functions' build"
  },
  "repository": "",
  "author": "Firebase (https://firebase.google.com/)",
  "license": "Apache-2.0",
  "devDependencies": {
    "@types/jest": "29.5.0",
    "@types/node": "^22.1.0",
    "codecov": "^3.8.2",
    "concurrently": "^8.2.2",
    "husky": "^9.1.4",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.8",
    "prettier": "3.3.3",
    "ts-jest": "29.1.2",
    "typescript": "^5.5.4"
  },
  "lint-staged": {
    "*.{js,md,yml,ts,json,yaml}": "prettier --write"
  },
  "pnpm": {
    "overrides": {
      "@grpc/grpc-js@<1.8.22": ">=1.8.22",
      "protobufjs@>=7.0.0 <7.2.5": ">=7.2.5",
      "braces@<3.0.3": ">=3.0.3"
    }
  }
}
